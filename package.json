{
  "name": "sakina",
  "private": true,
  "description": "sakina monorepo",
  "author": "fz6m",
  "homepage": "https://github.com/xn-sakina/sakina#README",
  "repository": {
    "type": "git",
    "url": "https://github.com/xn-sakina/sakina"
  },
  "keywords": [
    "sakina",
    "sakina-monorepo"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "build:all": "pnpm exec -- pnpm build --filter \"@fz6m/*\"",
    "push": "changeset",
    "version-packages": "changeset version",
    "vp": "pnpm version-packages",
    "push:npm": "pnpm toggle:npm && changeset publish && pnpm toggle:tb",
    "release": "pnpm build:all && pnpm push:npm",
    "release:only": "pnpm push:npm",
    "toggle:npm": "npm config set registry https://registry.npmjs.com/",
    "toggle:tb": "npm config set registry https://registry.npmmirror.com/"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.19.0",
    "chalk": "^4.1.2",
    "husky": "^7.0.4",
    "lint-staged": "^12.2.2",
    "only-allow": "^1.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT"
}
